/* components/nav-bar/index.wxss */
.nav-tab{
    display: flex;
    align-items: center;
    width: 100%;
    height: 44px;
}
.left,.right{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
}
.center{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}
.icon{
    width: 50rpx;
    display: none;
}
.left .left-slot:empty + .icon{
    display: block;
}
.center-title{
    display: none;
}
.center .center-slot:empty + .center-title{
    display: block;
}