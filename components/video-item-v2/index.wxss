/* components/video-item-v2/index.wxss */
.related{
  box-sizing: border-box;
  display: flex;
  padding: 10rpx 20rpx;
  width: 100%;
}
.rImg{
  width: 40%;
}
.rImg>image{
  width: 100%;
  border-radius: 20rpx;
}
.rTxt{
  box-sizing: border-box;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
  color: #333;
  font-size: 26rpx;
}
.title{
  margin-bottom: 10rpx;
  color: #000;
  font-size: 30rpx;
  font-weight: 600;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}